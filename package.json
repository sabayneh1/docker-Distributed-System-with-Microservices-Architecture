{
  "name": "distributed-microservice",
  "version": "1.0.0",
  "description": "Distributed microservice using docker test with SonarQube",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint ."
  },
  "dependencies": {
    "express": "^4.17.1",
    "public-ip": "^6.0.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "jest": "^29.7.0",
    "mocha": "^9.1.3",
    "supertest": "^6.3.4"
  },
  "jest": {
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/auth-service/node_modules/",
      "<rootDir>/product-service/node_modules/",
      "<rootDir>/user-service/node_modules/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
